{% extends 'baseBack.html.twig' %}

{% block title %}Equipements{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1 class="mb-4">Gestion des Équipements</h1>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
    <!-- Bouton Ajouter Équipement -->
    <div class="d-flex justify-content-end mb-3">
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addEquipementModal">
            <i class="fas fa-plus"></i> Ajouter un Équipement
        </button>
         <a  style="margin-left: 10px;"   href="{{ path('app_achat_index') }}" class="btn btn-primary">Achats</a>
    </div>
    
    <!-- Modal d'ajout -->
    <div class="modal fade" id="addEquipementModal" tabindex="-1" aria-labelledby="addEquipementModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="addEquipementModalLabel">Ajouter un Équipement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.prix) }}
                        {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.prix) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.quantite_disponible) }}
                        {{ form_widget(form.quantite_disponible, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.quantite_disponible) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.categorie) }}
                        {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.categorie) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.image) }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.image) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.fournisseur) }}
                        {{ form_widget(form.fournisseur, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.fournisseur) }}
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-success">Ajouter</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des équipements -->
    <div class="table-responsive">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Quantité Disponible</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Image</th>
                    <th scope="col">Fournisseur</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody id="tables">
                {% for equipement in equipements|sort((a, b) => a.id <=> b.id) %}
                    <tr>
                        <td>{{ equipement.id }}</td>
                        <td>{{ equipement.nom|capitalize }}</td>
                        <td>{{ equipement.prix }} TND</td>
                        <td>{{ equipement.quantiteDisponible }}</td>
                        <td>{{ equipement.categorie }}</td>
                        <td>
                            {% if equipement.image %}
                                <img src="{{ asset('uploads/equipements/' ~ equipement.image) }}" alt="{{ equipement.nom }}" style="max-width: 50px;">
                            {% else %}
                                No image
                            {% endif %}
                        </td>
                        <td>{{ equipement.fournisseur.firstname }}</td>
                        <td>
                            <!-- Bouton Modifier -->
                            <a href="#" class="text-warning me-2" data-bs-toggle="modal" data-bs-target="#editEquipementModal{{ equipement.id }}">
                                <i class="fas fa-edit"></i>
                            </a>

                            <!-- Bouton Supprimer -->
                            <a href="#" class="text-danger" data-bs-toggle="modal" data-bs-target="#deleteEquipementModal{{ equipement.id }}">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>

                    <!-- Modal de Modification -->
                    <div class="modal fade" id="editEquipementModal{{ equipement.id }}" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Modifier l'équipement</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form method="post" action="{{ path('equipement_edit', {'id': equipement.id}) }}" enctype="multipart/form-data" class="needs-validation" novalidate>
                                        <div class="mb-3">
                                            <label for="nom{{ equipement.id }}" class="form-label">Nom</label>
                                            <input type="text" class="form-control {% if form_errors(form.nom) %}is-invalid{% endif %}" 
                                                id="nom{{ equipement.id }}" name="nom" 
                                                value="{{ equipement.nom }}" required 
                                                pattern="^[a-zA-ZÀ-ÿ0-9\s\-_]+$"
                                                minlength="2"
                                                maxlength="255">
                                            <div class="text-danger">
                                                {{ form_errors(form.nom) }}
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="prix{{ equipement.id }}" class="form-label">Prix</label>
                                            <input type="number" class="form-control {% if form_errors(form.prix) %}is-invalid{% endif %}" 
                                                id="prix{{ equipement.id }}" name="prix" 
                                                value="{{ equipement.prix }}" required 
                                                min="0" 
                                                step="0.01">
                                            <div class="text-danger">
                                                {{ form_errors(form.prix) }}
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="quantite_disponible{{ equipement.id }}" class="form-label">Quantité Disponible</label>
                                            <input type="number" class="form-control {% if form_errors(form.quantite_disponible) %}is-invalid{% endif %}" 
                                                id="quantite_disponible{{ equipement.id }}" 
                                                name="quantite_disponible" 
                                                value="{{ equipement.quantiteDisponible }}" 
                                                required 
                                                min="0">
                                            <div class="text-danger">
                                                {{ form_errors(form.quantite_disponible) }}
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="categorie{{ equipement.id }}" class="form-label">Catégorie</label>
                                            <input type="text" class="form-control {% if form_errors(form.categorie) %}is-invalid{% endif %}" 
                                                id="categorie{{ equipement.id }}" 
                                                name="categorie" 
                                                value="{{ equipement.categorie }}" 
                                                required
                                                pattern="^[a-zA-ZÀ-ÿ\s\-_]+$"
                                                minlength="2"
                                                maxlength="255">
                                            <div class="text-danger">
                                                {{ form_errors(form.categorie) }}
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Image actuelle</label>
                                            {% if equipement.image %}
                                                <div class="mb-2">
                                                    <img src="{{ asset('uploads/equipements/' ~ equipement.image) }}" 
                                                        alt="{{ equipement.nom }}" 
                                                        style="max-width: 100px;">
                                                </div>
                                            {% endif %}
                                            <label class="form-label">Nouvelle image</label>
                                            <input type="file" class="form-control {% if form_errors(form.image) %}is-invalid{% endif %}" 
                                                name="image" accept="image/*">
                                            <div class="text-danger">
                                                {{ form_errors(form.image) }}
                                            </div>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                            <button type="submit" class="btn btn-warning">Enregistrer</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal de Suppression -->
                    <div class="modal fade" id="deleteEquipementModal{{ equipement.id }}" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Confirmer la suppression</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Êtes-vous sûr de vouloir supprimer cet équipement ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                    <form method="post" action="{{ path('equipement_delete', {'id': equipement.id}) }}" style="display: inline;">
                                        <button type="submit" class="btn btn-danger">Confirmer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if modal_open %}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var myModal = new bootstrap.Modal(document.getElementById('addEquipementModal'));
            myModal.show();
        });
    </script>
    {% endif %}

    <!-- JavaScript pour les messages flash -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                setTimeout(function() {
                    alert.style.opacity = 0;
                    setTimeout(function() {
                        alert.style.display = 'none';
                    }, 500);
                }, 3000);
            });
        });
    </script>
</div>
{% endblock %}

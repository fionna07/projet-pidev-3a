<div class="form-container">
    <div id="center-text">
        <h1>Formulaire De Création D'Equipement</h1>
    </div>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div id="form">
        <div class="form-group">
            {{ form_row(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de l\'équipement'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Prix de l\'équipement'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.quantite_disponible, {'attr': {'class': 'form-control', 'placeholder': 'Quantité disponible'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.categorie, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.fournisseur, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div id="submit">
            <button id="submitbutton" type="submit" class="btn btn-primary">{{ button_label|default('SUBMIT') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
    <div style="height: 100px;"></div>
</div>

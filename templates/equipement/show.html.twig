{% extends 'base.html.twig' %}

{% block title %}Equipement{% endblock %}
{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/styleshow.css') }}">
{% endblock %}

{% block body %}
    <div id="contain_all">
        <h1>Equipement</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id:</th>
                    <td>{{ equipement.id }}</td>
                </tr>
                <tr>
                    <th>Nom:</th>
                    <td>{{ equipement.nom }}</td>
                </tr>
                <tr>
                    <th>Prix:</th>
                    <td>{{ equipement.prix }}</td>
                </tr>
                <tr>
                    <th>Quantite_disponible:</th>
                    <td>{{ equipement.quantiteDisponible }}</td>
                </tr>
                <tr>
                    <th>Image:</th>
                    <td>{{ equipement.image }}</td>
                </tr>
                <tr>
                    <th>Categorie:</th>
                    <td>{{ equipement.categorie }}</td>
                </tr>
            </tbody>
        </table>
        <div id="contain_buttons">
            <a id="button_edit" href="{{ path('app_equipement_edit', {'id': equipement.id}) }}">Modifier</a>
            {{ include('equipement/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

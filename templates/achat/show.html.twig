{% extends 'base.html.twig' %}

{% block title %}Achat{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styleshow.css') }}">
{% endblock %}

{% block body %}
    <div id="contain_all">
        <h1>Achat</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id:</th>
                    <td>{{ achat.id }}</td>
                </tr>
                <tr>
                    <th>Utilisateur:</th>
                    <td>
                        {{ achat.utilisateur ? achat.utilisateur.id ~ ' - ' ~ achat.utilisateur.firstname ~ ' ' ~ achat.utilisateur.lastname : '' }}
                    </td>
                </tr>
                <tr>
                    <th>Date:</th>
                    <td>{{ achat.date ? achat.date|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Total:</th>
                    <td>{{ achat.total }}</td>
                </tr>
            </tbody>
        </table>
        <div id="contain_buttons">
            <a id="button_edit" href="{{ path('app_achat_edit', {'id': achat.id}) }}">Modifier</a>
            {{ include('achat/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

<div class="form-container">
    <div id="center-text">
        <h1>Formulaire De Cr√©ation D'Achat</h1>
    </div>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div id="form">
        <div class="form-group">
            {{ form_row(form.utilisateur, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Date de l\'achat'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.total, {'attr': {'class': 'form-control', 'placeholder': 'Total de l\'achat'}}) }}
        </div>
        <div id="submit">
            <button id="submitbutton" type="submit" class="btn btn-primary">{{ button_label|default('SUBMIT') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
    <div style="height: 100px;"></div>
</div>

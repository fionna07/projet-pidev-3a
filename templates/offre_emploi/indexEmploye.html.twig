{% extends 'base.html.twig' %}

{% block title %}Offres d'Emploi{% endblock %}

{% block body %}
    <!-- Affichage des messages de flash -->
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" id="flash-error">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" id="flash-success">
                {{ message }}
            </div>
        {% endfor %}
<div class="container mt-4">
    <h1 class="mb-2 fs-3">Les offres d'Emploi</h1>
    <!-- Barre de recherche -->
    <div class="mb-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Rechercher une offre..." aria-label="Recherche" aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary text-success" type="button" id="button-addon2">
                <i class="fas fa-search" style="color: #28a745;"></i> <!-- Icône verte -->
            </button>
        </div>
    </div>

    <!-- Bouton Afficher Candidatures -->
    <div class="d-flex justify-content-end mb-3">
    <a href="{{ path('app_mesCandidatures') }}" class="btn btn-success">
        Mes candidatures <i class="fas fa-clipboard-list ms-2"></i>
    </a>
    </div>
</div>
    <!-- Liste des offres -->
    <div class="row">
        {% for offre in offres %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card position-relative shadow-lg border-light rounded-3" style="height: 100%; display: flex; flex-direction: column;"> <!-- Ajout de l'ombrage et flex pour la hauteur -->
                      <!-- Date de publication -->
                        <div class="position-absolute top-0 start-0 m-2 text-muted small" style="margin-bottom: 10px;">
                            {% set now = date() %}
                            {% set diff = now.diff(offre.datePublication) %}
                            {% set days = diff.days %}

                            Publié :
                            {% if days == 0 %}
                                Aujourd'hui
                            {% elseif days == 1 %}
                                Hier
                            {% elseif days <= 7 %}
                                Il y a {{ days }} jours
                            {% else %}
                                {{ offre.datePublication|date('d/m/Y') }}
                            {% endif %}
                        </div>

                    
                    <!-- Statut -->
                    <div class="position-absolute top-0 end-0 m-2">
					{% if offre.status == 'actif' %}
						<span class="badge bg-success rounded-circle d-inline-block" style="width: 15px; height: 15px; margin: 4px;"></span>
					{% else %}
						<span class="badge bg-danger rounded-circle d-inline-block" style="width: 15px; height: 15px; margin: 4px;"></span>
					{% endif %}
					</div>

                    
                    <div class="card-body" style="padding-top: 30px;">
                    <h5 class="card-title fw-bold">{{ offre.titre|capitalize }}</h5>

                        <!-- Dates -->
                        <p class="mb-1"><strong>Date de début:</strong> {{ offre.dateDebut|date('d/m/Y') }}</p>
                        <p class="mb-1"><strong>Date de fin estimée:</strong> {{ offre.dateFinEstimee|date('d/m/Y') }}</p>
                        
                        <!-- Compétences requises -->
                        <p><strong>Compétences Requises:</strong></p>
                        <div class="mt-1">
                            <div class="d-flex flex-wrap gap-2">
                                {% for competence in offre.competencesRequises|split(',') %}
                                    <span class="badge" style="background-color: #f5f5dc; color: black; padding: 0.25rem 0.75rem; border-radius: 50px;">{{ competence|trim }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        
                        <!-- Salaire -->
                        <p class="mt-4"><strong>Salaire:</strong> {{ offre.salaire }} TND</p>
                    </div>
                    
                    <!-- Actions -->
                    <div class="card-footer d-flex justify-content-between">
                    <!-- Bouton Détails (Beige Clair) -->
                    <button type="button" class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#offreModal{{ offre.id }}">
                        <i class="fas fa-eye"></i> Détails
                    </button>
                    <!-- Bouton Postuler -->
                    <button type="button" class="btn btn-sm" 
                            {% if offre.status != 'actif' %} 
                                disabled 
                                style="background-color: #d6e8d7; border-color: #d6e8d7;" 
                            {% else %}
                                class="btn btn-success" 
                                style="background-color: #28a745; border-color: #28a745;" 
                            {% endif %} 
                            data-bs-toggle="modal" data-bs-target="#postulerModal{{ offre.id }}">
                        <!-- Icône et texte Postuler : Blanc si actif, sinon couleur originale -->
                        <i class="fas fa-paper-plane" 
                            {% if offre.status != 'actif' %} 
                                style="color: #000;" 
                            {% else %}
                                style="color: white;" 
                            {% endif %}>
                        </i> 
                        <span 
                            {% if offre.status != 'actif' %} 
                                style="color: #000;" 
                            {% else %}
                                style="color: white;" 
                            {% endif %}>
                            Postuler
                        </span>
                    </button>


                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
	<!-- Modals pour Détails et postulation -->
	{% for offre in offres %}
	<!-- Modal Détails -->
	<div class="modal fade" id="offreModal{{ offre.id }}" tabindex="-1" aria-labelledby="offreModalLabel{{ offre.id }}" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title fw-bold" id="offreModalLabel{{ offre.id }}">{{ offre.titre }}</h5>
				</div>
				<div class="modal-body">
                    <!-- Date de publication -->
                    <div class="position-absolute top-0 start-0 m-2 text-muted small" style="margin-bottom: 10px;">
                        {% set now = date() %}
                        {% set diff = now.diff(offre.datePublication) %}
                        {% set days = diff.days %}

                        Publié :
                        {% if days == 0 %}
                                Aujourd'hui
                        {% elseif days == 1 %}
                                Hier
                        {% elseif days <= 7 %}
                                Il y a {{ days }} jours
                        {% else %}
                                {{ offre.datePublication|date('d/m/Y') }}
                        {% endif %}
                        </div>
                        <br> <!-- Saut de ligne pour espacer -->
					<p><strong>Description :</strong></p>
					<p>{{ offre.description }}</p>

					<p><strong>Nombre de postes :</strong> {{ offre.nombrePostes }}</p>

					<p><strong>Date de début :</strong> {{ offre.dateDebut|date('d/m/Y H:i') }}</p> <!-- Date avec heure -->

					<p><strong>Date de fin estimée :</strong> {{ offre.dateFinEstimee|date('d/m/Y') }}</p> <!-- Date sans heure -->

                    <p><strong>Compétences Requises:</strong></p>
                    <div class="mt-2">
                        <div class="d-flex flex-wrap gap-2">
                            {% for competence in offre.competencesRequises|split(',') %}
                                <span class="badge" style="background-color: #f5f5dc; color: black; padding: 0.25rem 0.75rem; border-radius: 50px;">{{ competence|trim }}</span>
                            {% endfor %}
                        </div>
                    </div>

					<p class="mt-4"><strong>Salaire :</strong> {{ offre.salaire }} TND</p>

					<p><strong>Localisation :</strong> {{ offre.localisation }}</p>
				</div>
			</div>
		</div>
	</div>
    <!-- Modal Postuler -->
    <div class="modal fade" id="postulerModal{{ offre.id }}" tabindex="-1" aria-labelledby="postulerModalLabel{{ offre.id }}" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="postulerModalLabel{{ offre.id }}">Postuler à {{ offre.titre }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Formulaire de candidature -->
                    {{ form_start(formulaireOffres[offre.id], {'action': path('app_offreEmploiEmploye'), 'method': 'POST', 'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(formulaireOffres[offre.id].competences) }} <!-- Rendu du label -->
                            {{ form_widget(formulaireOffres[offre.id].competences) }} <!-- Rendu du champ de saisie -->
                            <div class="text-danger">
                                {{ form_errors(formulaireOffres[offre.id].competences) }}
                            </div>
                        </div>
                        <!-- Champ caché pour l'ID de l'offre -->
                        <input type="hidden" name="offre_id" value="{{ offre.id }}">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                            <button type="submit" class="btn btn-primary">Envoyer</button>
                        </div>
                    {{ form_end(formulaireOffres[offre.id]) }}
                </div>
            </div>
        </div>
    </div>
    <!-- Script pour Modal -->
    {% if modal_open %}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var myModal = new bootstrap.Modal(document.getElementById('postulerModal{{ offre.id }}'));
            myModal.show();
        });
    </script>
    {% endif %}
    {% endfor %}
    <!-- Ajout du JavaScript en dehors du bloc javascripts -->
    <script>
        // Délai en millisecondes avant de masquer les messages flash (par exemple 3 secondes)
        setTimeout(function() {
            // Cacher les messages d'erreur après 3 secondes
            document.querySelectorAll('.alert').forEach(function(alert) {
                alert.style.display = 'none';
            });
        }, 3000); // 3000 ms = 3 secondes
    </script>
    

</div>
{% endblock %}

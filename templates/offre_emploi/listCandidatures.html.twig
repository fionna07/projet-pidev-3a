{% extends 'base.html.twig' %}

{% block title %}Liste des Candidatures{% endblock %}

{% block body %}
{# Afficher les messages flash #}
{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ type }} alert-dismissible fade show flash-message" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

<div class="container mt-4">
    <h1 class="mb-2 fs-3">Liste des Candidatures</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nom et prénom de l'employé</th>
                <th scope="col">Compétences</th>
                <th scope="col">Date de candidature</th>
                <th scope="col">Statut</th>
                <th scope="col">Titre de l'offre</th>
                <th scope="col">Actions</th> {# Nouvelle colonne pour le bouton Modifier #}
            </tr>
        </thead>
        <tbody>
            {% for candidature in candidatures %}
                <tr>
                    <td>{{ candidature.employe.lastName }} {{ candidature.employe.firstName }}</td>
                    <td>
                        {% for competence in candidature.competences|split(',') %}
                            <span class="badge bg-success">{{ competence|trim }}</span> 
                        {% endfor %}
                    </td>
                    <td>{{ candidature.dateCandidature|date('d/m/Y H:i') }}</td>
                    <td>
                        <form action="{{ path('candidature_update', {'id': candidature.id}) }}" method="post">
                            <select class="form-select statut-select" name="statut">
                                <option value="en attente" {% if candidature.etat == 'en attente' %}selected{% endif %}>En attente</option>
                                <option value="acceptée" {% if candidature.etat == 'acceptée' %}selected{% endif %}>Acceptée</option>
                                <option value="refusée" {% if candidature.etat == 'refusée' %}selected{% endif %}>Refusée</option>
                            </select>
                    </td>
                    <td>{{ candidature.offre.titre }}</td>
                    <td>
                            <button type="submit" class="btn btn-primary">Modifier</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucune candidature trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<script>
    // Fermer automatiquement les messages flash après 3 secondes
    document.addEventListener("DOMContentLoaded", function() {
        setTimeout(function() {
            document.querySelectorAll('.flash-message').forEach(function(flash) {
                flash.classList.add('fade');
                setTimeout(function() {
                    flash.remove();
                }, 500); // Délai pour la suppression après l'animation
            });
        }, 3000); // Disparition après 3 secondes
    });
</script>

{% endblock %}

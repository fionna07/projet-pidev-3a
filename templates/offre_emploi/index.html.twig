    <!-- JavaScript pour faire dispara√Ætre les messages flash apr√®s un d√©lai -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // S√©lectionner les messages de succ√®s et d'erreur
            const successMessages = document.querySelectorAll('.alert-success');
            const errorMessages = document.querySelectorAll('.alert-danger');

            // Fonction pour faire dispara√Ætre les messages apr√®s 3 secondes
            successMessages.forEach(function(msg) {
                setTimeout(function() {
                    msg.style.opacity = 0;
                    setTimeout(function() {
                        msg.style.display = 'none';
                    }, 500); // D√©lai pour rendre le message invisible
                }, 3000); // 3 secondes
            });

            errorMessages.forEach(function(msg) {
                setTimeout(function() {
                    msg.style.opacity = 0;
                    setTimeout(function() {
                        msg.style.display = 'none';
                    }, 500); // D√©lai pour rendre le message invisible
                }, 3000); // 3 secondes
            });
        });
    </script>
    <!-- JavaScript pour la recherche -->
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        const searchInput = document.getElementById('searchInput');
        const searchButton = document.getElementById('searchButton');
        const offresList = document.getElementById('offresList');
        const offreCards = document.querySelectorAll('.offre-card');

        // Fonction pour normaliser les accents
        function normalizeString(str) {
            return str
                .normalize("NFD") // D√©compose les caract√®res accentu√©s en base + diacritique
                .replace(/[\u0300-\u036f]/g, ""); // Supprime les diacritiques
        }

        // Fonction de filtrage insensible √† la casse et aux accents
        function filterOffres() {
            const searchTerm = normalizeString(searchInput.value.trim().toLowerCase()); // Normaliser et convertir en minuscules

            offreCards.forEach(card => {
                const competences = normalizeString(card.getAttribute('data-titre').toLowerCase()); // Normaliser et convertir en minuscules
                if (competences.includes(searchTerm)) {
                    card.style.display = 'block'; // Afficher la carte si la comp√©tence correspond
                } else {
                    card.style.display = 'none'; // Masquer la carte si la comp√©tence ne correspond pas
                }
            });
        }

        // √âcouteur d'√©v√©nement pour le bouton de recherche
        searchButton.addEventListener('click', filterOffres);

        // √âcouteur d'√©v√©nement pour la touche "Entr√©e"
        searchInput.addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                filterOffres();
            }
        });
    });

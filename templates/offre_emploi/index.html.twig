{% extends 'base.html.twig' %}

{% block title %}Offres d'Emploi{% endblock %}

{% block body %}
<div class="container mt-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <h1 class="mb-2 fs-3">Les offres d'Emploi</h1>
    <!-- Barre de recherche -->
    <div class="mb-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Rechercher une offre..." aria-label="Recherche" aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary text-success" type="button" id="button-addon2">
                <i class="fas fa-search" style="color: #28a745;"></i> <!-- Icône verte -->
            </button>
        </div>
    </div>
    <!-- Bouton Ajouter Offre -->
    <div class="d-flex justify-content-end mb-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addOffreModal">
            <i class="fas fa-plus"></i> Ajouter une Offre
        </button>
    </div>
    <!-- Bouton Les candidatures -->
    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_candidatures') }}" class="btn btn-primary">
            <i class="fas fa-users"></i> Les candidatures
        </a>
    </div>
    
    <!-- Modal d'ajout -->
    <div class="modal fade" id="addOffreModal" tabindex="-1" aria-labelledby="addOffreModalLabel" aria-hidden="true"
    data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="addOffreModalLabel">Ajouter une Offre</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
    <!-- Formulaire d'ajout -->
    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

    <div class="mb-3">
        {{ form_label(form.titre) }}
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">
        {{ form_errors(form.titre) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">
        {{ form_errors(form.description) }}
        </div>

    </div>

    <div class="mb-3">
        {{ form_label(form.nombrePostes) }}
        {{ form_widget(form.nombrePostes, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">
        {{ form_errors(form.nombrePostes) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.dateDebut) }}
        {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">
        {{ form_errors(form.dateDebut) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.dateFinEstimee) }}
        {{ form_widget(form.dateFinEstimee, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">
        {{ form_errors(form.dateFinEstimee) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.localisation) }}
        {{ form_widget(form.localisation, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">
        {{ form_errors(form.localisation) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.competencesRequises) }}
        {{ form_widget(form.competencesRequises, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">
        {{ form_errors(form.competencesRequises) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.salaire) }}
        {{ form_widget(form.salaire, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">
        {{ form_errors(form.salaire) }}
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="submit" class="btn btn-primary">Ajouter</button>
    </div>

    {{ form_end(form) }}
</div>
            </div>
        </div>
    </div>

    <!-- Liste des offres -->
    <div class="row">
        {% for offre in offres %}
            <div class="col-md-6 col-lg-4 mb-4"> <!-- Cartes plus grandes et centrées -->
                <div class="card position-relative shadow-lg border-light rounded-3" style="height: 100%; display: flex; flex-direction: column;"> <!-- Ajout de l'ombrage et flex pour la hauteur -->
                    <!-- Date de publication -->
                    <div class="position-absolute top-0 start-0 m-2 text-muted small" style="margin-bottom: 10px;">
                        {% set now = date() %}
                        {% set diff = now.diff(offre.datePublication) %}
                        {% set days = diff.days %}

                        Publié :
                        {% if days == 0 %}
                            Aujourd'hui
                        {% elseif days == 1 %}
                            Hier
                        {% elseif days <= 7 %}
                            Il y a {{ days }} jours
                        {% else %}
                            {{ offre.datePublication|date('d/m/Y') }}
                        {% endif %}
                    </div>

                    <!-- Statut -->
                    <div class="position-absolute top-0 end-0 m-2">
                        {% if offre.status == 'actif' %}
                            <span class="badge bg-success rounded-circle d-inline-block" style="width: 15px; height: 15px; margin: 4px;"></span>
                        {% else %}
                            <span class="badge bg-danger rounded-circle d-inline-block" style="width: 15px; height: 15px; margin: 4px;"></span>
                        {% endif %}
                    </div>

                    <!-- Corps de la carte -->
                    <div class="card-body" style="padding-top: 30px; flex-grow: 1;"> <!-- Utilisation de flex-grow pour étirer la carte -->
                        <h5 class="card-title fw-bold">{{ offre.titre|capitalize }}</h5>

                        <!-- Dates -->
                        <p class="mb-1"><strong>Date de début:</strong> {{ offre.dateDebut|date('d/m/Y') }}</p>
                        <p class="mb-1"><strong>Date de fin estimée:</strong> {{ offre.dateFinEstimee|date('d/m/Y') }}</p>

                        <!-- Compétences requises -->
                        <p><strong>Compétences Requises:</strong></p>
                        <div class="mt-1">
                            <div class="d-flex flex-wrap gap-2">
                                {% for competence in offre.competencesRequises|split(',') %}
                                    <span class="badge" style="background-color: #f5f5dc; color: black; padding: 0.25rem 0.75rem; border-radius: 50px;">{{ competence|trim }}</span>
                                {% endfor %}
                            </div>
                        </div>

                        <!-- Salaire -->
                        <p class="mt-4"><strong>Salaire:</strong> {{ offre.salaire }} TND</p>
                    </div>

                    <!-- Actions -->
                    <div class="card-footer d-flex justify-content-between">
                        <!-- Bouton Détails -->
                        <button type="button" class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#offreModal{{ offre.id }}">
                            <i class="fas fa-eye"></i> Détails
                        </button>

                        {% if app.user and offre.user is not null and app.user.id == offre.user.id %}
                            <!-- Bouton Modifier -->
                            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#editOffreModal{{ offre.id }}">
                                <i class="fas fa-edit"></i> Modifier
                            </button>

                            <!-- Bouton Supprimer -->
                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmationModal{{ offre.id }}">
                                <i class="fas fa-trash"></i> Supprimer
                            </button>

                            <!-- Modal de confirmation -->
                            <div class="modal fade" id="confirmationModal{{ offre.id }}" tabindex="-1" aria-labelledby="confirmationModalLabel{{ offre.id }}" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="confirmationModalLabel{{ offre.id }}">Confirmation de suppression</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Êtes-vous sûr de vouloir supprimer cette offre d'emploi ? Cette action est irréversible.
                                        </div>
                                        <style>
                                            .btn-secondary {
                                                background-color: #6c757d !important; /* Gris */
                                                border-color: #6c757d !important;
                                            }
                                        </style>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                            <form method="post" action="{{ path('offre_supprimer', {'id': offre.id}) }}">
                                                <button type="submit" class="btn btn-danger">Confirmer</button> <!-- Red button -->
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
                
	<!-- Modals pour Détails et Modification -->
	{% for offre in offres %}
	<!-- Modal Détails -->
	<div class="modal fade" id="offreModal{{ offre.id }}" tabindex="-1" aria-labelledby="offreModalLabel{{ offre.id }}" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title fw-bold" id="offreModalLabel{{ offre.id }}">{{ offre.titre }}</h5>
				</div>
				<div class="modal-body">
                    <!-- Date de publication -->
                    <div class="position-absolute top-0 start-0 m-2 text-muted small" style="margin-bottom: 10px;">
                        {% set now = date() %}
                        {% set diff = now.diff(offre.datePublication) %}
                        {% set days = diff.days %}

                        Publié :
                        {% if days == 0 %}
                                Aujourd'hui
                        {% elseif days == 1 %}
                                Hier
                        {% elseif days <= 7 %}
                                Il y a {{ days }} jours
                        {% else %}
                                {{ offre.datePublication|date('d/m/Y') }}
                        {% endif %}
                        </div>
                        <br> <!-- Saut de ligne pour espacer -->
					<p><strong>Description :</strong></p>
					<p>{{ offre.description }}</p>

					<p><strong>Nombre de postes :</strong> {{ offre.nombrePostes }}</p>

					<p><strong>Date de début :</strong> {{ offre.dateDebut|date('d/m/Y H:i') }}</p> <!-- Date avec heure -->

					<p><strong>Date de fin estimée :</strong> {{ offre.dateFinEstimee|date('d/m/Y') }}</p> <!-- Date sans heure -->

                    <p><strong>Compétences Requises:</strong></p>
                    <div class="mt-2">
                        <div class="d-flex flex-wrap gap-2">
                            {% for competence in offre.competencesRequises|split(',') %}
                                <span class="badge" style="background-color: #f5f5dc; color: black; padding: 0.25rem 0.75rem; border-radius: 50px;">{{ competence|trim }}</span>
                            {% endfor %}
                        </div>
                    </div>

					<p class="mt-4"><strong>Salaire :</strong> {{ offre.salaire }} TND</p>

					<p><strong>Localisation :</strong> {{ offre.localisation }}</p>
				</div>
			</div>
		</div>
	</div>
    <!-- Modal Modification -->
	<div class="modal fade" id="editOffreModal{{ offre.id }}" tabindex="-1" aria-labelledby="editOffreModalLabel{{ offre.id }}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="editOffreModalLabel{{ offre.id }}">Modifier l'Offre</h5>
            </div>
            <div class="modal-body">
                <form method="post" action="{{ path('offre_edit', {'id': offre.id}) }}">
                    <!-- Titre -->
                    <div class="mb-3">
                        <label for="titre{{ offre.id }}" class="form-label">Titre</label>
                        <input type="text" class="form-control" id="titre{{ offre.id }}" name="titre" value="{{ offre.titre }}" required>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="description{{ offre.id }}" class="form-label">Description</label>
                        <textarea class="form-control" id="description{{ offre.id }}" name="description" rows="3" required>{{ offre.description }}</textarea>
                    </div>

                    <!-- Nombre de postes -->
                    <div class="mb-3">
                        <label for="nombrePostes{{ offre.id }}" class="form-label">Nombre de Postes</label>
                        <input type="number" class="form-control" id="nombrePostes{{ offre.id }}" name="nombrePostes" value="{{ offre.nombrePostes }}" required>
                    </div>

                    <!-- Date de début -->
                    <div class="mb-3">
                        <label for="dateDebut{{ offre.id }}" class="form-label">Date de Début</label>
                        <input type="datetime" class="form-control" id="dateDebut{{ offre.id }}" name="dateDebut" value="{{ offre.dateDebut|date('Y-m-d') }}" required>
                    </div>

                    <!-- Date de fin estimée -->
                    <div class="mb-3">
                        <label for="dateFinEstimee{{ offre.id }}" class="form-label">Date de Fin Estimée</label>
                        <input type="date" class="form-control" id="dateFinEstimee{{ offre.id }}" name="dateFinEstimee" value="{{ offre.dateFinEstimee|date('Y-m-d') }}" required>
                    </div>

                    <!-- Compétences Requises -->
                    <div class="mb-3">
                        <label for="competencesRequises{{ offre.id }}" class="form-label">Compétences Requises (séparées par des virgules)</label>
                        <input type="text" class="form-control" id="competencesRequises{{ offre.id }}" name="competencesRequises" value="{{ offre.competencesRequises }}">
                    </div>

                    <!-- Salaire -->
                    <div class="mb-3">
                        <label for="salaire{{ offre.id }}" class="form-label">Salaire</label>
                        <input type="number" class="form-control" id="salaire{{ offre.id }}" name="salaire" value="{{ offre.salaire }}" required>
                    </div>

                    <!-- Localisation -->
                    <div class="mb-3">
                        <label for="localisation{{ offre.id }}" class="form-label">Localisation</label>
                        <select class="form-control" id="localisation{{ offre.id }}" name="localisation" required>
                            <option value="" disabled selected>Choisir un gouvernorat</option>
                            <option value="Ariana" {% if offre.localisation == 'Ariana' %}selected{% endif %}>Ariana</option>
                            <option value="Béja" {% if offre.localisation == 'Béja' %}selected{% endif %}>Béja</option>
                            <option value="Ben Arous" {% if offre.localisation == 'Ben Arous' %}selected{% endif %}>Ben Arous</option>
                            <option value="Bizerte" {% if offre.localisation == 'Bizerte' %}selected{% endif %}>Bizerte</option>
                            <option value="Gabès" {% if offre.localisation == 'Gabès' %}selected{% endif %}>Gabès</option>
                            <option value="Gafsa" {% if offre.localisation == 'Gafsa' %}selected{% endif %}>Gafsa</option>
                            <option value="Jendouba" {% if offre.localisation == 'Jendouba' %}selected{% endif %}>Jendouba</option>
                            <option value="Kairouan" {% if offre.localisation == 'Kairouan' %}selected{% endif %}>Kairouan</option>
                            <option value="Kasserine" {% if offre.localisation == 'Kasserine' %}selected{% endif %}>Kasserine</option>
                            <option value="Kébili" {% if offre.localisation == 'Kébili' %}selected{% endif %}>Kébili</option>
                            <option value="Kef" {% if offre.localisation == 'Kef' %}selected{% endif %}>Kef</option>
                            <option value="Mahdia" {% if offre.localisation == 'Mahdia' %}selected{% endif %}>Mahdia</option>
                            <option value="Manouba" {% if offre.localisation == 'Manouba' %}selected{% endif %}>Manouba</option>
                            <option value="Médenine" {% if offre.localisation == 'Médenine' %}selected{% endif %}>Médenine</option>
                            <option value="Monastir" {% if offre.localisation == 'Monastir' %}selected{% endif %}>Monastir</option>
                            <option value="Nabeul" {% if offre.localisation == 'Nabeul' %}selected{% endif %}>Nabeul</option>
                            <option value="Sfax" {% if offre.localisation == 'Sfax' %}selected{% endif %}>Sfax</option>
                            <option value="Sidi Bouzid" {% if offre.localisation == 'Sidi Bouzid' %}selected{% endif %}>Sidi Bouzid</option>
                            <option value="Siliana" {% if offre.localisation == 'Siliana' %}selected{% endif %}>Siliana</option>
                            <option value="Sousse" {% if offre.localisation == 'Sousse' %}selected{% endif %}>Sousse</option>
                            <option value="Tataouine" {% if offre.localisation == 'Tataouine' %}selected{% endif %}>Tataouine</option>
                            <option value="Tozeur" {% if offre.localisation == 'Tozeur' %}selected{% endif %}>Tozeur</option>
                            <option value="Tunis" {% if offre.localisation == 'Tunis' %}selected{% endif %}>Tunis</option>
                            <option value="Zaghouan" {% if offre.localisation == 'Zaghouan' %}selected{% endif %}>Zaghouan</option>
                        </select>
                    </div>


                    <!-- Statut -->
                    <div class="mb-3">
                        <label for="status{{ offre.id }}" class="form-label">Statut</label>
                        <select class="form-control" id="status{{ offre.id }}" name="status" required>
                            <option value="actif" {% if offre.status == 'actif' %}selected{% endif %}>Actif</option>
                            <option value="inactif" {% if offre.status == 'inactif' %}selected{% endif %}>Inactif</option>
                        </select>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

	{% endfor %}

    {% if modal_open %}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var myModal = new bootstrap.Modal(document.getElementById('addOffreModal'));
            myModal.show();
        });
    </script>
    {% endif %}
    <!-- JavaScript pour faire disparaître les messages flash après un délai -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Sélectionner les messages de succès et d'erreur
            const successMessages = document.querySelectorAll('.alert-success');
            const errorMessages = document.querySelectorAll('.alert-danger');

            // Fonction pour faire disparaître les messages après 3 secondes
            successMessages.forEach(function(msg) {
                setTimeout(function() {
                    msg.style.opacity = 0;
                    setTimeout(function() {
                        msg.style.display = 'none';
                    }, 500); // Délai pour rendre le message invisible
                }, 3000); // 3 secondes
            });

            errorMessages.forEach(function(msg) {
                setTimeout(function() {
                    msg.style.opacity = 0;
                    setTimeout(function() {
                        msg.style.display = 'none';
                    }, 500); // Délai pour rendre le message invisible
                }, 3000); // 3 secondes
            });
        });
    </script>


</div>
{% endblock %}

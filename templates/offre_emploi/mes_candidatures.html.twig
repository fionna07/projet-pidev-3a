{% extends 'base.html.twig' %}

{% block title %}Mes Candidatures{% endblock %}

{% block body %}
    <h1>Mes Candidatures</h1>

    {% if candidatures is empty %}
        <p>Vous n'avez aucune candidature enregistrée.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Offre</th>
                    <th>Date de candidature</th>
                    <th>État</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for candidature in candidatures %}
                    <tr>
                        <td>{{ candidature.offre.titre }}</td>
                        <td>{{ candidature.dateCandidature|date('d/m/Y') }}</td>
                        <td>{{ candidature.etat }}</td>
                        <td>
                            <!-- Bouton Voir l'Offre (Vert) -->
                            <a href="{{ path('app_details_offre', {'offreId': candidature.offre.id}) }}" class="btn btn-success btn-sm">
                                <i class="fas fa-eye"></i> Voir l'Offre
                            </a>
                            <!-- Bouton Annuler (Jaune) pour ouvrir le modal -->
                            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#confirmationModal">
                                <i class="fas fa-times-circle"></i> Annuler
                            </button>
                            <!-- Modal de confirmation -->
                            <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Êtes-vous sûr de vouloir annuler cette candidature ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                    <!-- Formulaire de suppression -->
                                    <form action="{{ path('app_annuler_candidature', {'candidatureId': candidature.id}) }}" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-warning">Confirmer</button>
                                    </form>
                                </div>
                                </div>
                            </div>
                            </div>

                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}

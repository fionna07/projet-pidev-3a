{% extends 'baseBack.html.twig' %}

{% block title %}Gestion des Événements{% endblock %}

{% block content %}
<div class="text-center mb-4">
        <h2 class="fw-bold">Gestion des événements</h2>
        <a href="{{ path('app_events_new_back') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Ajouter un événement
        </a>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date de début</th>
                <th>Type de visite</th>
                <th>Localisation</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.titre }}</td>
                <td>{{ evenement.description }}</td>
                <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ evenement.typeVisite }}</td>
                <td>{{ evenement.localisation }}</td>
                <td>{{ evenement.prix }}</td>
                <td>
                <div class="btn-group">
                    <a href="{{ path('app_events_show_back', {'id': evenement.id}) }}" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_events_edit_back', {'id': evenement.id}) }}" class="btn btn-outline-warning btn-sm">
                    <i class="fas fa-edit"></i></a>
                    {# Formulaire de suppression avec CSRF protection #}
                    <form action="{{ path('app_events_delete_back', {'id': evenement.id}) }}" method="POST" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                              <i class="fas fa-trash-alt"></i>
                        </button>
                        {# Bouton pour voir les réservations de l'événement #}
                    <a href="{{ path('app_reservations_by_event', {'id': evenement.id}) }}" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-ticket-alt"></i>
                    </a>
                    </form>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun événement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Mes réservations{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Mes réservations</h1>

        {% if reservations|length > 0 %}
            <div class="row">
                {% for reservation in reservations %}
                    <div class="col-md-6 mb-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title">{{ reservation.evenement.titre }}</h5>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <strong>Date de réservation :</strong>
                                        {{ reservation.dateReservation|date('Y-m-d H:i:s') }}
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Statut :</strong>
                                        {{ reservation.etat }}
                                    </li>
                                </ul>

                                <!-- Bouton Annuler la réservation -->
                                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelModal{{ reservation.id }}">
                                    <i class="fas fa-times-circle"></i> Annuler la réservation
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Modal de confirmation d'annulation -->
                    <div class="modal fade" id="cancelModal{{ reservation.id }}" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="cancelModalLabel">Confirmer l'annulation</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Êtes-vous sûr(e) de vouloir annuler cette réservation ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                    <a href="{{ path('app_reservation_cancel', {'id': reservation.id}) }}" class="btn btn-danger">
                                        Oui, annuler
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                Vous n'avez aucune réservation pour le moment.
            </div>
        {% endif %}

      
    </div>
{% endblock %}

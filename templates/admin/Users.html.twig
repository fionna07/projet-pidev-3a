{% extends 'baseBack.html.twig' %}

{% block content %}
<div class="mb-3 text-center">
    <h2>Gestion des utilisateurs</h2>
    <a href="{{ path('user_add') }}" class="btn btn-success btn-sm">Ajouter un utilisateur</a>
</div>

<table class="table table-bordered table-sm text-center">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Rôle</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName ~ ' ' ~ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>
                    {% if user.status == 'actif' %}
                        <span class="badge bg-success">Actif</span>
                    {% else %}
                        <span class="badge bg-danger">Désactivé</span>
                    {% endif %}
                </td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-light btn-sm">Détails</a>
                        <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('user_delete', { 'id': user.id }) }}" class="btn btn-danger btn-sm" onclick="return confirm('Supprimer cet utilisateur ?');">Supprimer</a>

                        {% if user.status == 'actif' %}
                            <a href="{{ path('user_disable', { 'id': user.id }) }}" class="btn btn-secondary btn-sm">Désactiver</a>
                        {% else %}
                            <a href="{{ path('user_enable', { 'id': user.id }) }}" class="btn btn-success btn-sm">Activer</a>
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucun utilisateur trouvé.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

{% extends 'baseBack.html.twig' %}

{% block title %}Modifier Activit√©{% endblock %}

{% block content %}
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div class="card shadow-lg p-4 rounded-4">
        <h1 class="mb-4 text-center">üñä Modifier l'Activit√©</h1>

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.action) }}
                {{ form_widget(form.action) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.date) }}
                {{ form_widget(form.date) }}
            </div>

       

            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Enregistrer
            </button>
        {{ form_end(form) }}

       
    </div>
</div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // S√©lectionner les messages de succ√®s et d'erreur
            const successMessages = document.querySelectorAll('.alert-success');
            const errorMessages = document.querySelectorAll('.alert-danger');

            // Fonction pour faire dispara√Ætre les messages apr√®s 3 secondes
            successMessages.forEach(function(msg) {
                setTimeout(function() {
                    msg.style.opacity = 0;
                    setTimeout(function() {
                        msg.style.display = 'none';
                    }, 500); // D√©lai pour rendre le message invisible
                }, 3000); // 3 secondes
            });

            errorMessages.forEach(function(msg) {
                setTimeout(function() {
                    msg.style.opacity = 0;
                    setTimeout(function() {
                        msg.style.display = 'none';
                    }, 500); // D√©lai pour rendre le message invisible
                }, 3000); // 3 secondes
            });
        });
    </script>
{% endblock %}

{% extends 'baseBack.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white text-center">
                        <h3 class="mb-0">
                            <i class="fas fa-user-circle"></i> Détails de l'utilisateur
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <!-- Affichage de l'image de profil -->
                            {% if utilisateur.image %}
                                <img src="{{ utilisateur.image }}" alt="Image de profil" class="rounded-circle border shadow-sm" width="150">
                            {% else %}
                                <img src="{{ asset('images/default-profile.png') }}" alt="Image par défaut" class="rounded-circle border shadow-sm" width="150">
                            {% endif %}
                        </div>

                        <h4 class="text-center">{{ utilisateur.firstName }} {{ utilisateur.lastName }}</h4>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><i class="fas fa-envelope"></i> <strong>Email :</strong> {{ utilisateur.email }}</li>
                            <li class="list-group-item"><i class="fas fa-map-marker-alt"></i> <strong>Adresse :</strong> {{ utilisateur.adresse }}</li>
                            <li class="list-group-item"><i class="fas fa-phone"></i> <strong>Numéro de téléphone :</strong> {{ utilisateur.numTel }}</li>
                            <li class="list-group-item"><i class="fas fa-birthday-cake"></i> <strong>Date de naissance :</strong> {{ utilisateur.dateNaissance|date('d/m/Y') }}</li>
                            <li class="list-group-item"><i class="fas fa-user-tag"></i> <strong>Rôle :</strong> {{ utilisateur.roles|join(', ') }}</li>
                            <li class="list-group-item">
                                <i class="fas fa-check-circle"></i> <strong>Status :</strong>
                                <span class="badge {% if utilisateur.status == 'actif' %}bg-success{% else %}bg-danger{% endif %}">
                                    {{ utilisateur.status }}
                                </span>
                            </li>
                            <li class="list-group-item"><i class="fas fa-calendar-alt"></i> <strong>Date de création :</strong> {{ utilisateur.dateCreation|date('d/m/Y H:i') }}</li>
                        </ul>

                      
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
